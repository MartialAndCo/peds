# Every 1 minute: Process Incoming Messages (Discord/WhatsApp queue) - CRITICAL for message processing
* * * * * /run-job.sh "process-incoming" "https://peds.89-167-94-105.nip.io/api/cron/process-incoming" > /proc/1/fd/1 2>&1
* * * * * (sleep 30; /run-job.sh "process-incoming (delayed)" "https://peds.89-167-94-105.nip.io/api/cron/process-incoming" > /proc/1/fd/1 2>&1)

# Every 30 seconds: Process Message Queue (doubled frequency to prevent buildup)
* * * * * /run-job.sh "process-queue" "https://peds.89-167-94-105.nip.io/api/cron/process-queue" > /proc/1/fd/1 2>&1
* * * * * (sleep 30; /run-job.sh "process-queue (delayed)" "https://peds.89-167-94-105.nip.io/api/cron/process-queue" > /proc/1/fd/1 2>&1)

# Every 10 minutes: Rescue Abandoned Conversations
*/10 * * * * /run-job.sh "rescue" "https://peds.89-167-94-105.nip.io/api/cron/rescue" > /proc/1/fd/1 2>&1

# Every 5 minutes: Remind Voice Source
*/5 * * * * /run-job.sh "remind-voice" "https://peds.89-167-94-105.nip.io/api/cron/remind-voice" > /proc/1/fd/1 2>&1

# Every 1 minute: Remind Lead Provider (Urgent)
* * * * * /run-job.sh "remind-leads" "https://peds.89-167-94-105.nip.io/api/cron/remind-leads" > /proc/1/fd/1 2>&1

# Every 2 minutes: Recover Failed Webhooks
*/2 * * * * /run-job.sh "recovery" "https://peds.89-167-94-105.nip.io/api/cron/recovery" > /proc/1/fd/1 2>&1

# Every 1 minute: Process RVC Voice Conversion Jobs
* * * * * /run-job.sh "process-voice" "https://peds.89-167-94-105.nip.io/api/cron/process-voice" > /proc/1/fd/1 2>&1

# Every 1 hour: Extract Memories from Conversations
0 * * * * /run-job.sh "extract-memories" "https://peds.89-167-94-105.nip.io/api/cron/extract-memories" > /proc/1/fd/1 2>&1
